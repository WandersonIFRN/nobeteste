<% if notice.present? %>
    <div class="alert alert-success" role="alert">
        <%= notice %>
    </div>
<% end %>

<% if alert.present? %>
    <div class="alert alert-danger" role="alert">
    <%= alert %>
    </div>
<% end %>

<% if flash[:alert] %>
  <%=flash[:alert]%>
<%end%>
<% if flash[:notice] %>
  <%=flash[:notice]%>
<%end%>


<p id="notice"><%= notice %></p>

<p id="alert"><%= alert %></p>