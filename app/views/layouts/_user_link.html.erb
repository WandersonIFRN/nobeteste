<% if user_signed_in? %>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.email%>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><%= link_to 'Editar', edit_user_registration_path, class:'dropdown-item' %></li>
            <li><%= button_to  'Sair', destroy_user_session_path, method: :delete, class:'dropdown-item' %></li>
        </ul>
    </div>
<% else %>
    <%= link_to 'Entrar', new_user_session_path, class: 'btn btn-secondary' %>&nbsp;
    <%= link_to 'Registrar', new_user_registration_path, class: 'btn btn-secondary' %>
<% end %>